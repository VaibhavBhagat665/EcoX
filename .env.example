# =============================================================================
# EcoX Environment Configuration
# =============================================================================
# Instructions: Copy this file to .env and fill in the actual values.
# For production deployment in Replit, set these as Replit Secrets instead.

# =============================================================================
# FRONTEND CONFIGURATION (VITE_ variables are accessible in browser)
# =============================================================================

# Firebase Frontend Configuration
VITE_FIREBASE_API_KEY=__SET_IN_REPLIT_SECRETS__
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=__SET_IN_REPLIT_SECRETS__
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=__SET_IN_REPLIT_SECRETS__
VITE_FIREBASE_APP_ID=__SET_IN_REPLIT_SECRETS__
VITE_FIREBASE_MEASUREMENT_ID=__SET_IN_REPLIT_SECRETS__

# API Configuration
VITE_API_BASE_URL=http://localhost:5000

# Blockchain Configuration (Frontend Read-Only)
VITE_BLOCKCHAIN_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/demo
VITE_ECO_TOKEN_CONTRACT_ADDRESS=__SET_IN_REPLIT_SECRETS__

# Builder.io Configuration
VITE_BUILDER_API_KEY=__SET_IN_REPLIT_SECRETS__

# =============================================================================
# BACKEND CONFIGURATION (Server-side only)
# =============================================================================

# Application Configuration
NODE_ENV=development
PORT=5000

# Firebase Admin SDK (CRITICAL: Never expose these client-side)
FIREBASE_PROJECT_ID=__SET_IN_REPLIT_SECRETS__
FIREBASE_PRIVATE_KEY=__SET_IN_REPLIT_SECRETS__
FIREBASE_CLIENT_EMAIL=__SET_IN_REPLIT_SECRETS__
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com/

# Mock Mode Flags (Set to 'false' when real services are configured)
MOCK_FIREBASE_SERVICE=true
MOCK_BLOCKCHAIN_SERVICE=true
MOCK_AI_SERVICE=true

# Blockchain Configuration (Backend)
BLOCKCHAIN_RPC_URL=__SET_IN_REPLIT_SECRETS__
ECO_TOKEN_CONTRACT_ADDRESS=__SET_IN_REPLIT_SECRETS__
PRIVATE_KEY=__SET_IN_REPLIT_SECRETS__
GAS_LIMIT=100000
GAS_PRICE_GWEI=30

# Backend Security & Features
BACKEND_ALLOW_MINT=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# AI Service Configuration
AI_SERVICE_URL=__SET_IN_REPLIT_SECRETS__
AI_SERVICE_API_KEY=__SET_IN_REPLIT_SECRETS__

# Database Configuration (if using PostgreSQL instead of Firestore)
DATABASE_URL=postgresql://username:password@localhost:5432/ecox_db

# Security
JWT_SECRET=__SET_IN_REPLIT_SECRETS__
ENCRYPTION_KEY=__SET_IN_REPLIT_SECRETS__

# =============================================================================
# OPTIONAL SERVICES (Can be left as placeholders)
# =============================================================================

# External APIs
WEATHER_API_KEY=__SET_IN_REPLIT_SECRETS__
CARBON_INTERFACE_API_KEY=__SET_IN_REPLIT_SECRETS__

# Analytics
GOOGLE_ANALYTICS_ID=__SET_IN_REPLIT_SECRETS__
MIXPANEL_TOKEN=__SET_IN_REPLIT_SECRETS__

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=__SET_IN_REPLIT_SECRETS__
SMTP_PASS=__SET_IN_REPLIT_SECRETS__

# Social Media API Keys (optional)
TWITTER_API_KEY=__SET_IN_REPLIT_SECRETS__
FACEBOOK_APP_ID=__SET_IN_REPLIT_SECRETS__

# Monitoring
SENTRY_DSN=__SET_IN_REPLIT_SECRETS__
LOGROCKET_APP_ID=__SET_IN_REPLIT_SECRETS__

# Feature Flags
ENABLE_VOICE_ASSISTANT=true
ENABLE_3D_SCENE=true
ENABLE_COMMUNITY_FEATURES=true
ENABLE_AI_CHAT=true
ENABLE_ANALYTICS=true

# =============================================================================
# REPLIT SECRETS INSTRUCTIONS
# =============================================================================
# To set these in Replit:
# 1. Click the lock icon in the left sidebar
# 2. Add each required secret with the exact name from this file
# 3. Replace __SET_IN_REPLIT_SECRETS__ with actual values
#
# CRITICAL SECRETS (Required for production):
# - FIREBASE_PROJECT_ID
# - FIREBASE_PRIVATE_KEY (JSON key content)
# - FIREBASE_CLIENT_EMAIL
# - VITE_FIREBASE_API_KEY
# - VITE_FIREBASE_PROJECT_ID
# - ECO_TOKEN_CONTRACT_ADDRESS
# - BLOCKCHAIN_RPC_URL
# - PRIVATE_KEY (Ethereum private key)
#
# OPTIONAL SECRETS (for extended functionality):
# - AI_SERVICE_URL
# - WEATHER_API_KEY
# - All other __SET_IN_REPLIT_SECRETS__ placeholders
# =============================================================================
